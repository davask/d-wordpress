[
  {
    "title": "WordPress 4.4.2 + TSL",
    "description": "w4.4.2 + letsencrypt (optional)",
    "logo": "https://s.w.org/about/images/logos/wordpress-logo-notext-rgb.png",
    "image": "davask/d-wordpress:4.4.2-p5.6-a2.4-d8.8",
    "ports": [
        "22/tcp",
        "80/tcp",
        "443/tcp"
    ],
    "env": [
        {
            "name": "DWL_LOCAL_LANG",
            "label": "Local lang [en_US:en]"
        },{
            "name": "DWL_LOCAL",
            "label": "Local [en_US.UTF-8]"
        },{
            "name": "DWL_USER_NAME",
            "label": "Username [username]"
        },{
            "name": "DWL_SSH_ACCESS",
            "label": "Enable ssh access [false]"
        },{
            "name": "DWL_USER_ID",
            "label": "User id [1000]"
        },{
            "name": "DWL_USER_PASSWD",
            "label": "User password for ssh access [secret]"
        },{
            "name": "DWL_HTTP_SERVERADMIN",
            "label": "Server Admin email address [admin@localhost]"
        },{
            "name": "DWL_HTTP_DOCUMENTROOT",
            "label": "Document root [/var/www/html]"
        },{
            "name": "DWL_HTTP_SHIELD",
            "label": "htpasswd activated [false]"
        },{
            "name": "DWL_SSLKEY_C",
            "label": "Country Name (2 letter code) [EU]"
        }{
            "name": "DWL_SSLKEY_ST",
            "label": "State or Province Name (full name) [France]"
        }{
            "name": "DWL_SSLKEY_L",
            "label": "Locality Name (eg, city) [Vannes]"
        }{
            "name": "DWL_SSLKEY_O",
            "label": "Organization Name (eg, company) [davask web limited - docker container]"
        }{
            "name": "DWL_SSLKEY_CN",
            "label": "Common Name (e.g. server FQDN or YOUR name) [davaskweblimited.com]"
        }{
            "name": "DWL_CERTBOT_EMAIL",
            "label": "Certbot email contact [admin@localhost]"
        }{
            "name": "DWL_CERTBOT_DEBUG",
            "label": "Certbot debug mode [true]"
        }{
            "name": "DWL_PHP_DATETIMEZONE",
            "label": "php.ini > date.timezone [Europe/Paris]"
        }
    ],
    "volumes": [
        "/home/username",
        "/var/log/apache2",
        "/etc/apache2/sites-available",
        "/etc/apache2/ssl",
        "/etc/letsencrypt"
    ]
  }
]
